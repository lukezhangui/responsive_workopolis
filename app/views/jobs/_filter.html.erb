<!-- left hand side filter in search result -->
<header class="filters-header">
  Filter your search results
  <span class="filters-header-icon icon-arrow-right"></span>
</header>
<div class="filters-wrapper">
  <% @filters.each do |filter_name, filter| %>

  <details class="filter-section" open>
    <summary><%= filter_name %></summary>
    <ol class="filter-items cf">

      <% filter.each_with_index do |filter_item, index|%>
      <li class="cf">
        <input type="checkbox" id="<%= filter_item + index.to_s %>">
        <label for="<%= filter_item + index.to_s %>"></label>
        <label class="filter-item-label" for="<%= filter_item + index.to_s %>"><%= filter_item %></label>
      </li>
      <% end %>

    </ol>
  </details>

  <% end %>
</div>